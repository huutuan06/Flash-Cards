<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.flashcards.flashcards.ui.jetpack.JetpackViewModel"
            />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/space_12dp"
        >

        <LinearLayout
            android:id="@+id/ln_layout_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ln_layout_2"
            app:layout_constraintTop_toTopOf="parent"
            >

            <TextView
                android:id="@+id/tv_server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_big"
                android:textStyle="bold"
                tools:text="From Server"
                />

            <Button
                android:id="@+id/btn_get_data_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get data"
                />

            <TextView
                android:id="@+id/tv_voca_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_big"
                android:textStyle="bold"
                tools:text="Text 1"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_layout_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@id/ln_layout_1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <TextView
                android:id="@+id/tv_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_big"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/tv_server"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="From Room"
                />

            <Button
                android:id="@+id/btn_get_data_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get data"
                />

            <TextView
                android:id="@+id/tv_voca_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_big"
                android:textStyle="bold"
                tools:text="Text 2"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_8dp"
            android:layout_marginRight="@dimen/space_8dp"
            android:text="@{viewModel.randomVoca.englishTitle.toString()}"
            android:textAlignment="center"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
